<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppHelplineActivity">



    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/colorLightGray"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:text="ચોડવડીયા પરિવાર"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="આ એપ્લિકેશન અંગે માહિતી લેવા માટે નીચેની વ્યક્તિ ને સંપર્ક કરો"
                    android:textSize="15sp"
                    android:layout_margin="10dp"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Member's Name : 00000 00000"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    app:cardBackgroundColor="@color/colorPrimary"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Developed By"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    />

                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/hfulogo"
                    android:layout_gravity="center"
                    />

                <RelativeLayout
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/name_pp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Parth Panchal"
                        android:textColor="@android:color/black"
                        />
                    <TextView
                        android:id="@+id/call_pp"
                        android:layout_below="@+id/name_pp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+91 7227856454"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/tv_hfu_web_hl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="www.hfugroup.com"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAlignment="center"
                        android:layout_alignParentBottom="true"
                        />

                    <TextView
                        android:id="@+id/name_bc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bhautik Chodvadiya"
                        android:layout_alignParentEnd="true"
                        android:textColor="@android:color/black"
                        />

                    <TextView
                        android:id="@+id/call_bc"
                        android:layout_below="@+id/name_bc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+91 7201916649"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentEnd="true"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        />

                </RelativeLayout>

            </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>