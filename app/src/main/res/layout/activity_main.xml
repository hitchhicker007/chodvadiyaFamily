<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/parivar_text"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="40sp"
        android:text="ચોડવડીયા પરિવાર"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginTop="5dp"
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/chodvadiya"
        android:layout_below="@+id/parivar_text"
        />

    <LinearLayout
        android:layout_below="@+id/parivar_text"
        android:layout_centerVertical="true"
        android:layout_marginTop="150dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/linear_login"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_person_black_24dp"
                android:background="@android:color/white"/>

            <EditText
                android:id="@+id/etUsernameLogin"
                android:hint="ઇમેઇલ આઈડી લખો"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:padding="20dp"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_marginTop="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_lock_black_24dp"
                android:background="@android:color/white"/>

            <EditText
                android:id="@+id/etPasswordLogin"
                android:hint="પાસવર્ડ લખો"
                android:padding="20dp"
                android:textStyle="bold"
                android:inputType="textPassword"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/show_hide_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="પાસવર્ડ બતાવો"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/forgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="પાસવર્ડ ભૂલી ગયા છો ?"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginStart="60dp"/>

        </LinearLayout>


        <Button
            android:id="@+id/btnLogin"
            android:text="પ્રવેશ માટે અહીં ક્લિક કરો"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttons"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textSize="15sp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="**અથવા**"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="@color/colorPrimaryDark"
            />


        <Button
            android:id="@+id/btngotoregister"
            android:text="નવી નોંધણી માટે અહીં ક્લિક કરો"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttons"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="15sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/app_helpline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="એપ્લિકેશન હેલ્પલાઇન"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        android:paddingVertical="5dp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>